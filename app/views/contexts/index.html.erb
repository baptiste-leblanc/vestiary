<div class="justify-content-center">
  <div class="border-bottom" style="background-color: #f5f4ed" >
    <h3 class="pt-3 ms-4 fw-light text-dark fs-6 h1-custom" >PREVIOUS SEARCHES</h3>
    <div class="d-flex overflow-auto mb-3" style="scrollbar-width: none;box-shadow:">
      <% @contexts.each do |context| %>
        <div class="border rounded-4 bg-white flex-shrink-0 m-3 p-3 d-flex align-content-between flex-wrap shadow-sm" style="width: 300px;">
          <h5 class="text-dark text-capitalize" ><strong><%= context.objective %></strong></h5>
          <%= link_to "SEE RESULTS", context_path(context), class: "text-dark fs-6 text-decoration-none" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


  <div class="d-flex justify-content-center align-items-center w-100", style="height: 60vh;">
    <div class="container col-8">
        <%= simple_form_for [@user, @context] do |f| %>
          <%= f.input :objective,
            placeholder: "What type of outfit are you looking for?",
            required: true,
            label: false,
            as: :text,
            input_html: {
              class: "border rounded-4 bg-white shadow-sm mb-4 text-secondary focus-shadow-lg",
              rows: 3,
              autofocus: true
            } %>

          <%= f.input :budget,
            collection: %w[€ €€ €€€ €€€€],
            prompt: "Quel est votre budget",
            label: false,
            input_html: { class: "border rounded-4 bg-white form-select shadow-sm mb-4" } %>

          <%= f.submit "Find my look!",
            class: "btn btn-dark btn-lg w-100 shadow" %>
          <% end %>
      </div>
      </div>
    </div>
  </div>
</div>
