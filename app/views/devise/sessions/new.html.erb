<head>
<link href="https://fonts.googleapis.com/css2?family=Protest+Revolution&family=Instrument+Sans:wght@400;700&display=swap" rel="stylesheet">
</head>

<body class="home-background d-flex flex-column align-items-center justify-content-center vh-100">

  <div class="title-banner text-center p-4 mt-4 rounded shadow">
    <h1 class="mt-4">Vestiary</h1>
    <h2 class="mt-4">Welcome to your relooking journey</h2>
  </div>

  <h3 class="mt-5">Log in</h3>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs, text-white">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label: false,
                  input_html: { autocomplete: "email", placeholder: "Your email" } %>
      <%= f.input :password,
                  required: false,
                  label: false,
                  input_html: { autocomplete: "current-password", placeholder: "Your password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn-primary mb-3 w-100" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</body>
